<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/PoundPickerLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="250dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_above="@id/PoundPicker"
        android:text="Entrer un poids"/>


    <EditText
        android:id="@+id/PoundPicker"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="10dp"
        android:inputType="numberDecimal"/>

    <Button
        android:id="@+id/PoundPickerCancelButton"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_below="@id/PoundPicker"
        android:layout_alignParentEnd="true"
        android:text="Annuler" />

    <Button
        android:id="@+id/PoundPickerSetButton"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_below="@id/PoundPicker"
        android:layout_alignParentStart="true"
        android:text="Valider" />

    <!--<Button
        android:id="@+id/DatePoundPickerButton"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_below="@id/PoundPickerSetButton"
        android:layout_centerHorizontal="true"
        android:text="Date" /> -->

</RelativeLayout>