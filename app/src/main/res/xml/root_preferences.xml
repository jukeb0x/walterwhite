<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/points_header">

        <EditTextPreference
            app:key="sp_nb"
            app:title="@string/sp_title"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="rh_nb"
            app:title="@string/rh_title"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/program_header">

        <EditTextPreference
            app:key="pounds"
            app:title="@string/pounds_title"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="Lundi"
            app:entries="@array/days_entries"
            app:entryValues="@array/days_values"
            app:key="day_ref"
            app:title="@string/ref_day_title"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>
</PreferenceScreen>